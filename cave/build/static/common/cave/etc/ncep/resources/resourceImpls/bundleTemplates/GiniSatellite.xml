<resourceGroup xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <resource>
     <loadProperties loadWithoutData="true"  overlayMatchTolerance="1">
       <capabilities>
         <capability xsi:type="colorMapCapability">
<!-- a temp colormap name since this will be set from the colorBar -->
            <colorMapParameters colorMapName="colorMapName"/>
         </capability>
         <capability xsi:type="imagingCapability" 
                     interpolationState="false" brightness="1.0" 
                     contrast="1.0" alpha="1.0"/>
         </capabilities>
         <resourceType>PLAN_VIEW</resourceType>
       </loadProperties>
       <properties isSystemResource="false" 
                     isBlinking="false" isMapLayer="false" 
                     isHoverOn="false" isVisible="true">
       </properties>
       <resourceData xsi:type="NcSatelliteResourceData" 
                     isUpdatingOnMetadataOnly="false" 
                     isRequeryNecessaryOnTimeMatch="true">
         <satelliteType>GINI</satelliteType>
         <displayUnitStr>${displayUnitStr}</displayUnitStr>
			   <legendColor>${legend_color}</legendColor>
			   <colorMapName>${colorMapName}</colorMapName>
  		    ${colorBar}
         <frameSpan>${frameSpan}</frameSpan>
         <dfltNumFrames>${dfltNumFrames}</dfltNumFrames>
         <dfltTimeRange>${dfltTimeRange}</dfltTimeRange>
         <timeMatchMethod>${timeMatchMethod}</timeMatchMethod>       
         <timelineGenMethod>${timelineGenMethod}</timelineGenMethod> 
         <metadataMap>
            <mapping key="pluginName">
               <constraint constraintValue="${pluginName}" 
                           constraintType="EQUALS"/>
            </mapping>
            <mapping key="physicalElement">
               <constraint constraintValue="${imageType}" 
                           constraintType="EQUALS"/>
            </mapping>
            <mapping key="sectorID">
               <constraint constraintValue="${sectorID}" 
                           constraintType="EQUALS"/>
            </mapping>
<!-- we would like to use imageType and areaName here like McIdas 
     since these are the values that the 
     user will see in the generating subType field in the gui --> 
<!-- but we can't because the parameter name and the key need to be the 
same since 
     the dynamic resource generation code uses the parameters as 
     request constraints when querying the DB.
  -->
            <mapping key="creatingEntity">
               <constraint constraintValue="${creatingEntity}" 
                           constraintType="LIKE"/>
            </mapping>
          </metadataMap>
         </resourceData>
        </resource>
</resourceGroup>   
