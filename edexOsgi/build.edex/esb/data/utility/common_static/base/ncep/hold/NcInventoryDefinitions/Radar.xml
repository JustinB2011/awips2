<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<NcInventoryDefinition xmlns:ns2="group" xmlns:ns3="http://www.example.org/productType">
    <inventoryName>Radar</inventoryName>
    <inventoryParameters>pluginName,icao,productCode,elevationNumber,format,dataTime</inventoryParameters>
    <baseConstraints>
        <mapping key="pluginName">
            <constraint constraintValue="radar" constraintType="EQUALS"/>
        </mapping>
        <mapping key="format">
        <!-- Graphic not used by the LocalRadar resource -->
            <constraint constraintValue="Radial,Raster" constraintType="IN"/>
        </mapping>
    </baseConstraints>
</NcInventoryDefinition>
