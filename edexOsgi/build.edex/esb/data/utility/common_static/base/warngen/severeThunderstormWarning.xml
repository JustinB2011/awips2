</bulletActionGroup>
<bulletActionGroup action="COR" phen="SV" sig="W">
 <bullets>
  <bullet bulletText="*** CORRECTED PRODUCT. CLICK CREATE TEXT ***" bulletType="title"/>
 </bullets>
</bulletActionGroup>
