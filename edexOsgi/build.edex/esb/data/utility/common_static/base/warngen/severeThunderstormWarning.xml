  <bullet bulletText="" bulletType="title"/>
  <bullet bulletText="************ LOCATIONS IMPACTED  **************" bulletType="title"/>
  <bullet bulletName="pathcast" bulletText="Select for pathcast" bulletGroup="toggle4" parseString="WILL BE NEAR..."/>
