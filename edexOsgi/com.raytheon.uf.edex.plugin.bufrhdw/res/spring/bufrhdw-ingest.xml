<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="bufrhdwDecoder" class="com.raytheon.uf.edex.plugin.bufrhdw.HDWDecoder">
        <constructor-arg ref="bufrhdwPluginName" />
    </bean>

	<bean id="bufrhdwDistRegistry" factory-bean="distributionSrv"
		factory-method="register">
		<constructor-arg ref="bufrhdwPluginName" />
		<constructor-arg value="jms-dist:queue:Ingest.bufrhdw?destinationResolver=#qpidDurableResolver" />
	</bean>

	<bean id="bufrhdwCamelRegistered" factory-bean="contextManager"
		factory-method="register" depends-on="persistCamelRegistered">
		<constructor-arg ref="bufrhdw-camel"/>
  	</bean> 

	<camelContext id="bufrhdw-camel"
		xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler"
		autoStartup="false">
		<!--
		<endpoint id="bufrhdwFileEndpoint" uri="file:${edex.home}/data/sbn/bufrhdw?noop=true&amp;idempotent=false" />

		<route id="bufrhdwFileConsumerRoute">
			<from ref="bufrhdwFileEndpoint" />
			<bean ref="fileToString" />
			<setHeader headerName="pluginName">
                <constant>bufrhdw</constant>
			</setHeader>
			<to uri="jms-generic:queue:Ingest.bufrhdw" />
		</route>
		-->

		<!-- Begin bufrhdw routes -->
		<route id="bufrhdwIngestRoute">
			<from uri="jms-generic:queue:Ingest.bufrhdw?destinationResolver=#qpidDurableResolver" />
			<setHeader headerName="pluginName">
                <constant>bufrhdw</constant>
			</setHeader>
			<doTry>
				<pipeline>
					<bean ref="stringToFile" />
					<bean ref="bufrhdwDecoder" method="decode" />
                    <to uri="direct-vm:persistIndexAlert" />
				</pipeline>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bufrhdw?level=ERROR&amp;showBody=false&amp;showCaughtException=true&amp;showStackTrace=true"/>
				</doCatch>
			</doTry>
		</route>
	</camelContext>
</beans>