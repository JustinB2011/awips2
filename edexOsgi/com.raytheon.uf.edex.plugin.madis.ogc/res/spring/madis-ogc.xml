<beans xmlns="http://www.springframework.org/schema/beans"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
	
	<bean id="madisLayerPluginName" class="java.lang.String">
		<constructor-arg type="java.lang.String" value="madisLayer" />
	</bean>

	<bean id="madisLayerProperties" class="com.raytheon.uf.common.dataplugin.PluginProperties">
		<property name="pluginName" ref="madisLayerPluginName" />
		<property name="pluginFQN" value="com.raytheon.uf.edex.plugin.madis.ogc" />
		<property name="record" value="com.raytheon.uf.edex.plugin.madis.ogc.MadisLayer" />
	</bean>

    <bean factory-bean="pluginRegistry" factory-method="register">
		<constructor-arg ref="madisLayerPluginName"/>
		<constructor-arg ref="madisLayerProperties"/>
	</bean>
	
	<bean id="madisWfsSource" class="com.raytheon.uf.edex.plugin.madis.ogc.MadisWfsSource" >
		<constructor-arg ref="madisProperties" />
	</bean>

	<bean factory-bean="wfsRegistry" factory-method="register">
		<constructor-arg ref="madisWfsSource" />
	</bean> 
		
	<bean id="madisWmsSource" class="com.raytheon.uf.edex.plugin.madis.ogc.MadisWmsSource" >
		<constructor-arg ref="madisProperties" />
		<constructor-arg ref="madisLayerTransformer"/>
	</bean>
	
	<bean id="madisLayerTransformer" class="com.raytheon.uf.edex.ogc.common.db.LayerTransformer" >
  		<constructor-arg value="madis" />
  		<constructor-arg value="com.raytheon.uf.edex.plugin.madis.ogc.MadisLayer" />
  	</bean>

</beans>