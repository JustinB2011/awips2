err_usage()
{
    echo 2>&1 "Usage: $0 all | host ..."
    exit $ERR_USAGE
}


#
# Parse options
#
while getopts "" opt 
do
    case $opt in
	*)  err_usage;;
    esac
done

#
# Terminate if no host specified.
#
if test $# -eq 0
then
    err_usage
fi

#
# Special-case host "all"
#
if test $# -eq 1 && test $1 = all
then
    set buddy dana flip gilda imogene mort sid tweety yakov zasu zero
fi

for host in "$@"
do
    echo "Starting build on $host."
    $host >$host.log 2>&1 &
    eval ${host}Pid=$!
done

status=0
for host in "$@"
do
    eval wait \${${host}Pid}
    stat=$?
    if test $stat -ne 0
    then
	echo 1>&2 "Build on \"$host\" exited with status $stat.  " \
	    "See file \"$host.log\"."
	status=$ERR_BUILD
    fi
done

exit $status
