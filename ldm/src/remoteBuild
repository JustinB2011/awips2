ERR_USAGE=1
ERR_BUILD=2


zasu()		# AIX 1 5 000C330F4C00
{
    ssh Zasu /opt/gnu/bin/bash -login ldm/package/src/linkBuild \
	-C /usr/vac/bin/cc \
	-m /usr/ccs/bin/make &&
    ssh Zasu /opt/gnu/bin/bash -login ldm/package/src/linkBuild \
	-C /usr/vac/bin/xlc \
	-m /usr/ccs/bin/make &&
    ssh Zasu /opt/gnu/bin/bash -login ldm/package/src/linkBuild \
	-C gcc \
	-c --disable-max-size \
	-m /opt/gnu/bin/make &&
# gcc 3.2
    ssh Zasu /opt/gnu/bin/bash -login ldm/package/src/linkBuild \
	-C /usr/vac/bin/c89 \
	-m /usr/ccs/bin/make
}


