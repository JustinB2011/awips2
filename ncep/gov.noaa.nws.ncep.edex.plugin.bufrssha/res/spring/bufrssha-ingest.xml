<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd   
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="bufrsshaDecoder"
		class="gov.noaa.nws.ncep.edex.plugin.bufrssha.decoder.BufrSshaDecoder">
		<constructor-arg ref="bufrsshaPluginName" />
	</bean>

	<bean id="bufrsshaSeparator"
		class="gov.noaa.nws.ncep.edex.plugin.bufrssha.decoder.BufrSshaSeparator" />



    <bean id="bufrsshaDistRegistry" factory-bean="distributionSrv"
		factory-method="register">
		<constructor-arg ref="bufrsshaPluginName" />
		<constructor-arg value="jms-dist:queue:Ingest.bufrssha" />
	</bean>
    
	<bean id="bufrsshaCamelRegistered" factory-bean="contextManager"
		factory-method="register" depends-on="persistCamelRegistered">
		<constructor-arg ref="bufrssha-camel"/>
  	</bean>   
    
	<camelContext id="bufrssha-camel" 
	              xmlns="http://camel.apache.org/schema/spring" 
	              errorHandlerRef="errorHandler"
	              autoStartup="false">
		<endpoint id="bufrsshaFileEndpoint" uri="file:${edex.home}/data/sbn/bufrssha?noop=true&amp;idempotent=false" />

		<!-- Begin BufrSsha routes -->
		<route id="bufrsshaFileConsumerRoute">
			<from ref="bufrsshaFileEndpoint" />
			<bean ref="fileToString" />
			<setHeader headerName="pluginName">
				<constant>bufrssha</constant>
			</setHeader>
			<to uri="jms-generic:queue:Ingest.bufrssha" />
		</route>

		<route id="bufrsshaIngestRoute">
			<from uri="jms-generic:queue:Ingest.bufrssha" />
			 <setHeader headerName="pluginName">
                <constant>bufrssha</constant>
            </setHeader>
            <doTry>
				<pipeline>
			<bean ref="stringToFile" />
			    <doTry>
				    <pipeline>
					    <bean ref="bufrsshaDecoder" method="decode" />
					    <!-- <to uri="directvm:indexAlert" /> -->
					    <!-- *****profiler had instead***** -->
					    <to uri="directvm:persistIndexAlert" />
				    </pipeline>
				    <doCatch>
					    <exception>java.lang.Throwable</exception>
					    <to uri="log:bufrssha?level=ERROR&amp;showBody=false" />
				    </doCatch>
			    </doTry>
			<!-- <bean ref="processUtil" method="delete" / --> 
			</pipeline>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bufrssha?level=ERROR&amp;showBody=false" />
				</doCatch>
			</doTry>
		</route>
	</camelContext>
</beans>