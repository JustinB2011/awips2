<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:amq="http://activemq.apache.org/schema/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd   
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


	<bean id="pafmDecoder" class="gov.noaa.nws.ncep.edex.plugin.pafm.decoder.PafmDecoder">
		<constructor-arg ref="pafmPluginName" />
	</bean>

	<bean id="pafmSeparator" class="gov.noaa.nws.ncep.edex.plugin.pafm.decoder.PafmSeparator" />

	<bean id="pafmDistRegistry" factory-bean="distributionSrv"
		factory-method="register">
		<constructor-arg value="pafm" />
		<constructor-arg value="jms-dist:queue:Ingest.pafm" />
	</bean>

    <bean id="pafmCamelRegistered" factory-bean="contextManager"
		factory-method="register" depends-on="persistCamelRegistered">
		<constructor-arg ref="pafm-camel"/>
  	</bean> 

	<camelContext id="pafm-camel" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler"
		autoStartup="false">
		<endpoint id="pafmFileEndpoint"
			uri="file:${edex.home}/data/sbn/pafm?noop=true&amp;idempotent=false" />

		<route id="pafmFileConsumerRoute"> <from ref="pafmFileEndpoint" /> <bean 
			ref="fileToString" /> <setHeader headerName="pluginName"> <constant>pafm</constant> 
			</setHeader> <to uri="jms-generic:queue:Ingest.pafm" /> </route>
			
		<!-- Begin pafm routes -->
		<route id="pafmIngestRoute">
			<from uri="jms-generic:queue:Ingest.pafm" />
			<setHeader headerName="pluginName">
				<constant>pafm</constant>
			</setHeader>
			<doTry>
				<pipeline>
					<bean ref="stringToFile" />
					<split streaming="true">
						<method bean="pafmSeparator" method="separate" />
						<doTry>
							<pipeline>
								<bean ref="pafmDecoder" method="decode" />
								<to uri="directvm:indexAlert" />
							</pipeline>
							<doCatch>
								<exception>java.lang.Throwable</exception>
								<to uri="log:pafm?level=ERROR&amp;showBody=false" />
							</doCatch>
						</doTry>
					</split>
				</pipeline>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:pafm?level=ERROR&amp;showBody=false" />
				</doCatch>
			</doTry>
		</route>
	</camelContext>
</beans>