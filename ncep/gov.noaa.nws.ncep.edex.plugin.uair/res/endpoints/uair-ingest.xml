<!-- Defines endpoint configuration for uair ingest                       -->
<!--                                                                      -->
<!-- File History:                                                        -->
<!--  Date:     Ticket     Engineer      Description                      -->
<!--  ========= =========  ============  ==============================   -->
<!--  12/09         210       L. Lin        Initial Creation              -->
<!-- ==================================================================== -->
<mule-configuration version="1.0">
    <model name="edex" type="seda">

        <mule-descriptor name="Awips.Mule.Service.StagingSrv-uair"
            singleton="true"
            implementation="com.raytheon.edex.services.StagingSrv"
            outboundEndpoint="jms://ar/uair">
            <inbound-router>
                <endpoint name="uairIngestEndpoint"
                    address="file://../../data/sbn/uair/?transformers=NoActionTransformer">
                    <properties>
						<property name="autoDelete" value="false" />
						<property name="moveToDirectory"
							value="../../processing" />
                    </properties>
                </endpoint>
            </inbound-router>
            <threading-profile maxThreadsActive="1" maxThreadsIdle="1" />
        </mule-descriptor>
        
		<!-- Endpoint to archive Uair Data -->
		<mule-descriptor name="Awips.Edex.Service.ArchiveSrv-uair"
			singleton="false"
			implementation="com.raytheon.edex.services.ArchiveSrv"
			outboundEndpoint="jms://cp/uair">
			<inbound-router>
				<endpoint name="AR-Uair" address="jms://ar/uair" />
			</inbound-router>
			<threading-profile maxThreadsActive="4" maxThreadsIdle="4" />
			<properties>
				<property name="pluginName" value="UAIR" />
				<property name="archiveDirectoryLocation" value="../../data/archive/uair/" />
				<property name="jmxModeOn" value="true" />
			</properties>
		</mule-descriptor>

        <!-- Endpoint to ingest Uair data -->
		<mule-descriptor name="Awips.Edex.Service.IngestSrv-uair"
			singleton="false"
			implementation="com.raytheon.edex.services.IngestSrv">
			<inbound-router>
				<endpoint name="CP-Uair" address="jms://cp/uair" transformers="MessageToObject FilePathToBytes" />
			</inbound-router>
			<outbound-router>
				<router
					className="org.mule.routing.outbound.FilteringListMessageSplitter">
					<endpoint address="vm://indexVMQueue" />
				</router>
			</outbound-router>
			<threading-profile maxThreadsActive="4" maxThreadsIdle="4" />
			<properties>
                <property name="pluginName" value="UAIR" />
			</properties>
		</mule-descriptor>
    </model>
</mule-configuration>
