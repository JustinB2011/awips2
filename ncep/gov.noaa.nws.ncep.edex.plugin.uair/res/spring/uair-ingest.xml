<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:amq="http://activemq.apache.org/schema/core"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd   
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
       
	
	<bean id="uairDecoder" class="gov.noaa.nws.ncep.edex.plugin.uair.decoder.UairDecoder">
		<constructor-arg ref="uairPluginName"/>
	</bean>
		
	<bean id="uairSeparator" class="gov.noaa.nws.ncep.edex.plugin.uair.decoder.UairSeparator" />

	<!-- chin bean id="uairRegistry" class=" com.raytheon.uf.edex.esb.camel.BasicThreadPoolRouter"
		factory-method="getInstance" depends-on="alphaNumericDatatypePool">
		<constructor-arg><value>AlphaNumeric</value></constructor-arg>
		<constructor-arg><value>uair</value></constructor-arg>
		<constructor-arg><value>directvm:uairIngest</value></constructor-arg>
	</bean-->

	<!--  chinbean id="uairDistRegistry" class=" com.raytheon.uf.edex.distribution.DistributionSrv"
		factory-method="register">
		<constructor-arg value="uair" />
		<constructor-arg value="jms-generic:queue:Ingest.AlphaNumeric" />
	</bean-->
	<bean id="uairDistRegistry" factory-bean="distributionSrv"
		factory-method="register">
		<constructor-arg value="uair" />
		<constructor-arg value="jms-dist:queue:Ingest.uair" />
	</bean>

    <bean id="uairCamelRegistered" factory-bean="contextManager"
		factory-method="register" depends-on="persistCamelRegistered">
		<constructor-arg ref="uair-camel"/>
  	</bean> 

	<camelContext id="uair-camel" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler"
		autoStartup="false">
		<endpoint id="uairFileEndpoint" uri="file:${edex.home}/data/sbn/uair?noop=true&amp;idempotent=false"/>

		<!-- Begin Uair routes -->
		<route id="uairFileConsumerRoute">
			<from ref="uairFileEndpoint" />
			<bean ref="fileToString" />
			<setHeader headerName="pluginName">
				<constant>uair</constant>
			</setHeader>
			<!-- chin to uri="jms-generic:queue:Ingest.AlphaNumeric" /-->
			<to uri="jms-generic:queue:Ingest.uair" />
		</route>

		<route id="uairIngestRoute">
			<!-- chin from uri="directvm:uairIngest" /-->
			<from uri="jms-generic:queue:Ingest.uair" />
			<setHeader headerName="pluginName">
				<constant>uair</constant>
			</setHeader>
			<bean ref="stringToFile" />
			<split streaming="true">
				<method bean="uairSeparator" method="separate" />
				<doTry>
					<pipeline>
						<bean ref="uairDecoder" method="decode" />
						<to uri="directvm:indexAlert" />
					</pipeline>
					<doCatch>
						<exception>java.lang.Throwable</exception>
						<to uri="log:uair?level=ERROR&amp;showBody=false" />
					</doCatch>
				</doTry>
			</split>
			<!--<bean ref="processUtil" method="delete" /> -->
		</route>
	</camelContext>
</beans>